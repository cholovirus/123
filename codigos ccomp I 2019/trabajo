#include <iostream>

using namespace std;

class IntegerArray {
		int *data;
        int size_;
    public:
        IntegerArray() {
            this->size_ = 0;
			this->data = new int[0];
        }
		IntegerArray(int arr[], int size_){
			this->size_ = size_;
			this->data = new int[size_];
			for(int i = 0; i < size_; i++){
				this->data[i] = arr[i];
			}
		}
        void printArray(){
            for(int i=0;i<getSize();i++){
                cout<<this->data[i]<<endl;

            }
        }

        void insetar(int var){
            this->size_+=1;
            this->data[size_-1]=var;
        }
        void eliminar(){
            this->size_-=1;
        }

        void eliminarP(int posicion){
            int aux=posicion-1;
            if(posicion==this->size_){return;}
            for(int i=aux;;i++){

                int temp=this->data[i];
                this->data[i]=this->data[i+1];
                this->data[i+1]=temp;
                if(i==this->size_-2){break;}
            } eliminar();

        }

		int getSize(){
			return size_;
		}
		~IntegerArray(){
			delete[] this->data;
		}
};

int main()
{
    int arre[]={1,2,3,4};
    IntegerArray arr(arre,4);

    arr.eliminarP(1);
    arr.printArray();
    return 0;
}
